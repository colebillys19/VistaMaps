
<% include ./partials/header %>

<div class="form-container sign-up">
	<h2>Sign Up</h2>
	<form action="/register" method="POST">
		<div>
			<label for="username">Username</label>
	    	<input id="username" type="text" name="username" pattern="^[a-zA-Z0-9-_.]{4,15}$" required autofocus>
            <p id="tip">(4 to 15 characters)&nbsp;(letters, numbers, or . _ -)</p>
	    </div>
	    <div>
	    	<label for="password">Password</label>
	    	<input id="password" type="password" name="password" required>
	    </div>
		<div>
			<label for="confirm">Confirm Password</label>
	    	<input id="confirm" type="password" name="confirm" required>
	    </div>
	    <div>
	    	<label for="firstName">First Name</label>
	    	<input id="firstName" type="text" name="firstName" required>
	    </div>
	    <div>
	    	<label for="lastName">Last Name</label>
	    	<input id="lastName" type="text" name="lastName" required>
	    </div>
        <div>
            <label for="email">Email</label>
            <input id="email" type="email" name="email" required>
        </div>
	    <div>
	    	<label for="avatar">Avatar URL <span>(Optional)</span></label>
	    	<input id="avatar" type="text" name="avatar">
	    </div>
	    <div>
	    	<label for="adminCode">Admin Code <span>(Optional)</span></label>
	    	<input id="adminCode" type="text" name="adminCode">
	    </div>
    	<button>Sign Up</button>
	</form>
</div>

<!---------------------------------------------------------------------------------------------------->

<script>
    var nameIn = document.getElementById("username");
    var tip = document.getElementById("tip");
    nameIn.addEventListener("blur", function(){
        tip.style.display = "none";
    });
    nameIn.addEventListener("focus", function(){
        tip.style.display = "block";
    });
</script>

